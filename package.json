{
  "name": "tfc",
  "version": "0.1.0",
  "description": "Terminal File Commander",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tfc": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "pnpm build && node dist/index.js",
